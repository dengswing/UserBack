<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.breakpad.shinezone.crashjar.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CrashReport"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上传后删除文件"
        android:id="@+id/cbxDelFile"
        android:checked="false"
        android:layout_above="@+id/btnCrashNative"
        android:layout_alignRight="@+id/btnCrashNative"
        android:layout_alignEnd="@+id/btnCrashNative"
        android:layout_marginBottom="72dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CrashNative"
        android:id="@+id/btnCrashNative"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btnCrashJava"
        android:layout_alignStart="@+id/btnCrashJava" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CrashJava"
        android:id="@+id/btnCrashJava"
        android:layout_below="@+id/btnCrashNative"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp" />

</LinearLayout>
